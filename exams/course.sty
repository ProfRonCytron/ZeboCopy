\newenvironment{GenHandout}[2]{
\def\Title{#1}
% \overfullrule=12pt
% \showboxdepth=1000\showboxbreadth=1000\relax
\vbox{%
\vskip -\headsep
\vskip -\headheight
\noindent\framebox[\textwidth]{%
  \vbox {\baselineskip=0pt\hsize=0.97\textwidth%
     \hbox to 0.97\textwidth{%
        {\bf \Course\space%
             \CourseName \hfill \CourseTime}%
     }%
     \vskip 1.0em %
     \hbox to 0.97\textwidth{%
         {\hfill \Large\Title\hfill}%
     }%
     \vskip 1.0em %
     \hbox to 0.97\textwidth{%
        {#2}
     }%
  }%
}%
}
}{\newpage\setcounter{page}{1}}
\newenvironment{assignment}[3]{%
\setbox\DateBox=\hbox{Due by #3}
\begin{GenHandout}{#1}{\large\sf Given: #2 \hfill Due: #3}
}{\end{GenHandout}}
\newenvironment{handout}[2]{%
\setbox\DateBox=\hbox{#2}
\begin{GenHandout}{#1}{\sf \hfill #2 \hfill}
}{\end{GenHandout}}
